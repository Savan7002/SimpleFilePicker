<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:tools="http://schemas.android.com/tools"    android:id="@+id/dialog_image_picker_rl_parent"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:background="@color/background"    android:orientation="vertical">    <LinearLayout        android:id="@+id/dialog_image_picker_ll_animetlayout"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_alignParentBottom="true"        android:orientation="vertical">        <Button            android:id="@+id/dialog_image_picker_btn_gallery"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_marginBottom="10dp"            android:layout_marginEnd="10dp"            android:layout_marginStart="10dp"            android:text="From Gallery" />        <Button            android:id="@+id/dialog_image_picker_btn_camera"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_marginBottom="10dp"            android:layout_marginEnd="10dp"            android:layout_marginStart="10dp"            android:text="From Camera" />        <Button            android:id="@+id/dialog_image_picker_btn_cancel"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_marginBottom="10dp"            android:layout_marginEnd="10dp"            android:layout_marginStart="10dp"            android:text="Cancel" />    </LinearLayout></RelativeLayout>